/* addToAccount.wxss */
page {
  background: rgb(247, 247, 247);
}
/* 头部样式 */
.head-container  {
  height: 430rpx;
  background: rgb(57, 166, 255);
  text-align: center;
}
.head-avatarUrl {
  width: 160rpx;
  height: 160rpx;
  margin-top: 20rpx;
  background: rgba(57, 166, 255, .16);
  border-radius: 80rpx;
}
.head-nickname, .head-todothing, .head-accountInfo {
  display: block;
  font-size: 34rpx;
  color: #ffffff;
}
.head-nickname {
  margin: 10rpx auto 16rpx;
}
.head-todothing {
  margin: 0 auto 32rpx;
}
.head-accountInfo {
  margin: 0 auto;
  font-size: 40rpx;
}
/* 参与账本的同伴 */
.body-participants {
  display: block;
  margin: 60rpx auto 30rpx;
  padding: 0 40rpx;
  font-size: 34rpx;
  color: rgb(95, 95, 95);
}
.body-participants-members {
  margin: 0 auto 60rpx;
  padding: 0 40rpx;
}
.participants-member {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: rgba(57, 166, 255, .16);
  margin-right: 10rpx;
}
/* 上传二维码收款 */
.body-code {
  margin: 0 auto 40rpx;
  padding: 0 40rpx;
}
.body-code-title {
  font-size: 34rpx;
  color: rgb(95, 95, 95);
}
.body-code-info {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-left: 14rpx;
  vertical-align: -14%;
}
.body-code-upload {
  margin: 40rpx auto 98rpx;
  padding: 0 40rpx;
}
.upload-button {
  width: 140rpx;
  height: 140rpx;
}
.addToAccount-button {
  width: 560rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: rgb(57, 166, 255);
  border-radius: 40rpx;
  color: #ffffff;
  font-size: 34rpx;
  text-align: center;
}
.addToAccount-button::after {
	border: 0;
}
/* info弹窗 */
.show0 {
  display: none;
}
.alert-background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  background: rgba(0, 0, 0, .5);
}
.alert-container {
  position: relative;
  top: 250rpx;
  margin: 0 auto;
  width: 500rpx;
  height: 450rpx;
  background: rgb(247, 247, 247);
  border-radius: 14rpx;
  overflow: hidden;
}
.alert-container::after {
  border: 0;
}
.alert-question, .alert-ans1, .alert-ans2 {
  position: absolute;
  left: 44rpx;
  display: block;
  width: 412rpx;
  color: rgb(95, 95, 95);
  text-align: justify;
}
.alert-question {
  top: 58rpx;
  font-size: 34rpx;
  letter-spacing: 3rpx;
}
.alert-ans1 {
  top: 120rpx;
  line-height: 42rpx;
  font-size: 26rpx;
}
.alert-ans2 {
  bottom: 130rpx;
  line-height: 50rpx;
  font-size: 34rpx;
}
.alert-confirm {
  position: absolute;
  bottom: 0;
  width: 520rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin-left: -10rpx;
  border-top: 1rpx solid rgb(247, 247, 247);
  font-size: 34rpx;
  color: rgb(57, 166, 255);
}