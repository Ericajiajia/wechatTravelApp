.summary-title {
	margin: 46rpx auto 0;
	font-size: 38rpx;
	color: rgb(95, 95, 95);
	text-align: center;
}
.title-special {
	color: rgb(57, 166, 255);
}
.summary-canvas {
	height: 650rpx;
	margin: 0 auto;
}
.canvas {
	width: 100%;
	height: 650rpx;
	margin: 0 auto;
	margin-left: -10rpx;
	background-color: #ffffff;
}
.summary-sum-container {
	display: flex;
	justify-content: space-between;
	height: 120rpx;
	padding: 35rpx;
	box-sizing: border-box;
	border-top: 1rpx solid rgba(95, 95, 95, .2);
	border-bottom: 1rpx solid rgba(95, 95, 95, .2);
}
.sum-title {
	font-size: 36rpx;
	color: rgb(95, 95, 95);
	padding-left: 16rpx;
	border-left: 6rpx solid rgb(57, 166, 255);
}
.sum-money {
	font-size: 40rpx;
	color: rgb(95, 95, 95);
}
.summary-detail-container {
	margin: 0 auto;
	padding: 35rpx;
	padding-bottom: 0;
	font-size: 36rpx;
	color: rgb(95, 95, 95);
	border-bottom: 1rpx solid rgba(95, 95, 95, .2);
}
.detail-title {
	border-left: 6rpx solid rgb(57, 166, 255);
	padding-left: 16rpx;
}
.detail-blocks {
	margin: 0;
	margin-top: 35rpx;
	margin-left: 22rpx;
}
.block {
	height: 90rpx;
	line-height: 90rpx;
	display: flex;
	margin-bottom: 20rpx;
	font-size: 34rpx;
}
.block-image {
	width: 80rpx;
	height: 80rpx;
	margin-top: 5rpx;
}
.block-image-container {
	width: 90rpx;
	height: 90rpx;
	margin-right: 18rpx;
	background: rgba(57, 166, 255, .2);
	border-radius: 50%;
	text-align: center;
}
.block-variety {
	color: rgb(95, 95, 95);
	margin-right: 14rpx;
}
.block-remark {
	height: 90rpx;
	line-height: 90rpx;
	width: 340rpx;
	color: rgb(160, 160, 160);
	overflow: scroll;
}
.block-money {
	color: rgb(95, 95, 95);
	margin-left: 20rpx;
}
.summary-button {	
	width: 500rpx;
	height: 90rpx;
	line-height: 90rpx;
	margin: 30rpx auto;
	padding: 0;
	font-size: 34rpx;
	color: #ffffff;
	border-radius: 45rpx;
	text-align: center;
	background: rgb(57, 166, 255);
}
.summary-button::after {
	border: 0;
}