.bill-block {
	position: relative;
	top: 0;
	left: 0;
	height: 140rpx;
	line-height: 140rpx;
	padding: 0;
	background: #ffffff;
	border-bottom: 1rpx solid rgba(160, 160, 160, .2);
}
.bill-container {
	position: relative;
	z-index: 10;
	top: 0;
	height: 140rpx;
	display: flex;
	justify-content: space-between;
	padding: 0 40rpx;
	box-sizing: border-box;
	background: #ffffff;
}
.bill-location {
	display: inline-block;
	font-size: 36rpx;
	color: rgb(57, 166, 255);
}
.bill-time {
	display: inline-block;
	font-size: 32rpx;
	color: rgb(160, 160, 160);
}
.bill-buttons {
	position: absolute;
	top: 0;
	right: 0;
	width: 150px;
	height: 140rpx;
	display: flex;
	justify-content: space-between;
}
.bill-editor, .bill-delete {
	width: 50%;
	height: 139rpx;
	line-height: 139rpx;
	color: #ffffff;
	font-size: 32rpx;
	text-align: center;
}
.bill-editor {
	background: rgb(155, 155, 155);
}
.bill-delete {
	background: rgb(246, 102, 99);
}
.noneBills {
	width: 100%;
	height: 100%;
	text-align: center;
	color: rgb(160, 160, 160);
}
.noneText {
	display: inline-block;
	margin: 180rpx auto;
	font-size: 30rpx;
}