/* 二维码上传页面样式 */
page {
  background: rgb(247, 247, 247);
}
.code-show {
  height: 280rpx;
  margin: 118rpx auto 40rpx;
  text-align: center;
}
.code-show-icon {
  width: 280rpx;
  height: 280rpx;
	background: #ffffff;
}
.code-info, .code-error-info {
  margin: 0 auto 60rpx;
  text-align: center;
}
.code-error-info {
  font-size: 32rpx;
	color: rgb(246, 102, 99);
}
.code-info-title {
  font-size: 32rpx;
  color: rgb(95, 95, 95);
}
.code-info-icon {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  margin-left: 10rpx;
  vertical-align: -14%;
}
/* 确定按钮 */
.code-change {
	margin-bottom: 40rpx;
}
.code-confirm, .code-change {
  width: 560rpx;
  height: 80rpx;
  line-height: 78rpx;
  padding: 0;
  border-radius: 40rpx;
  text-align: center;
  font-size: 34rpx;
	border: 2rpx solid rgb(57, 166, 255);
}
.code-change {
  color: #ffffff;
  background: rgb(57, 166, 255);
}
.code-confirm {
	color: rgb(57, 166, 255);
  background: rgb(247, 247, 247);
}
.forbidden {
	color: rgb(160, 160, 160);
	border: 2rpx solid rgb(160, 160, 160);
}
.code-confirm::after, .code-change::after {
  border: 0;
}
/* info弹窗 */
.show0 {
  display: none;
}
.alert-background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  background: rgba(0, 0, 0, .5);
}
.alert-container {
  position: relative;
  top: 280rpx;
  margin: 0 auto;
  width: 500rpx;
  height: 350rpx;
  background: rgb(247, 247, 247);
  border-radius: 14rpx;
  overflow: hidden;
}
.alert-container::after {
  border: 0;
}
.alert-question, .alert-ans1, .alert-ans2 {
  position: absolute;
  left: 44rpx;
  display: block;
  width: 412rpx;
  color: rgb(95, 95, 95);
  text-align: justify;
}
.alert-question {
  top: 58rpx;
  font-size: 34rpx;
  letter-spacing: 3rpx;
}
.alert-ans1 {
  top: 120rpx;
  line-height: 42rpx;
  font-size: 26rpx;
}
.alert-ans2 {
  bottom: 120rpx;
  line-height: 50rpx;
  font-size: 34rpx;
}
.alert-confirm {
  position: absolute;
  bottom: 0;
  width: 520rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin-left: -10rpx;
  border-top: 1rpx solid rgb(247, 247, 247);
  font-size: 34rpx;
  color: rgb(57, 166, 255);
}