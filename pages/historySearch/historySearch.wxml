<view wx:for="{{historyList}}" wx:for-index="index" wx:for-item="item" class='history-per {{have}}'>
  <view>
    <image class='history-image' src='{{item.imageUrl}}' background-size="cover"></image>
  </view>
  <view class='history-detail-area'>
    <view class='history-detail-title'>
      <text class='detail-name'>{{item.name}}</text>
      <text class='detail-done'>{{item.done}}</text>
      <text class='detail-sort'>{{item.sort}}</text>
    </view>
    <view class='history-detail-price'>{{item.price}}元</view>
  </view>
</view>
<view class='non-history {{none}}'>
  <view class='non-history-title'>暂无历史操作</view>
</view>