/* 历史操作页面样式 */
page {
  background: rgb(247, 247, 247);
}
.history-per {
  height: 120rpx;
  padding-left: 30rpx;
  background: #ffffff;
  display: flex;
  justify-content: space-between;
}
/* 操作者头像 */
.history-image {
  width: 88rpx;
  height: 88rpx;
  margin-top: 16rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  background: rgba(57, 166, 255, .2);
}
/* 操作者信息区域 */
.history-detail-area {
  width: 600rpx; 
  height: 100rpx;
  padding-top: 20rpx;
  line-height: 45rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid rgb(247, 247, 247);
}
.history-detail-title {
  color: rgb(95, 95, 95);
  letter-spacing: 2rpx;
}
.detail-name, .detail-done, .detail-sort {
  margin-right: 20rpx;
}
.history-detail-price {
  color: rgb(57, 166, 255);
}
/* 两种页面的切换 */
.have {
  display: none;
}
.none {
  display: none;
}
/* 没有历史记录的样式 */
.non-history {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  text-align: center;
}
.non-history-title {
  position: relative;
  top: 48%;
  margin: 0 auto;
  font-size: 38rpx;
  color: rgb(160, 160, 160);
  letter-spacing: 2rpx;
}