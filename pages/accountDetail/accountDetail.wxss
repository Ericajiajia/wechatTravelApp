/* 旅行账本样式 */
.account-summary-container {
	background: rgb(247, 247, 247);
	margin: 0 auto;
	padding: 20rpx 0;
}
.account-summary {
	width: 710rpx;
	background: #ffffff;
	border-radius: 8rpx;
	margin: 0 auto;
	padding: 30rpx 20rpx 40rpx;
	box-sizing:border-box;
}
.summary-title {
	width: 670rpx;
	margin: 0 auto;
	display: flex;
	justify-content: space-between;
}
.summary-title-content {
	font-size: 38rpx;
	color: rgb(95, 95, 95);
}
.summary-title-menu {
	width: 42rpx;
	height: 32rpx;
	padding: 25rpx;
	margin-top: -20rpx;
}
.summary-users {
	width: 690rpx;
	margin: 40rpx auto 0;
}
.users-icon-button {
	display: inline-block;
	padding: 0;
}
.summary-users-image, .users-icon-button {
	width: 90rpx;
	height: 90rpx;
	margin-right: 10rpx;
	border-radius: 50%;
}
.summary-users-icon {
	width: 100%;
	height: 100%;
}
.summary-users-image {
	background: rgba(57, 166, 255, .2);
}
.summary-users-text {
	display: inline-block;
	font-size: 32rpx;
	color: rgb(160, 160, 160);
	margin-left: 6rpx;
	vertical-align:75%;
}
.textNone {
	display: none;
}
/* 总花费样式 */
.account-summoney {
	margin: 0 auto;
	padding: 40rpx 0;
	text-align: center;
	background: #ffffff;
	border-top: 1rpx solid rgba(95, 95, 95, .1);
	border-bottom: 1rpx solid rgba(95, 95, 95, .1);
}
.summoney-title {
	margin: 0 auto;
	font-size: 34rpx;
	color: rgb(95, 95, 95);
}
.summoney-title-info {
	width: 36rpx;
	height: 36rpx;
	padding: 15rpx;
	margin-left: 6rpx;
	vertical-align: -45%;
}
.summoney-price {
	margin: 23rpx auto 38rpx;
	font-size: 26rpx;
	color: rgb(95, 95, 95);
}
.summoney-price-number {
	margin-right: 10rpx;
	font-size: 54rpx;
	color: rgb(57, 166, 255);
}
.summoney-add {
	width: 400rpx;
	height: 70rpx;
	line-height: 70rpx;
	margin: 0 auto;
	padding: 0;
	border-radius: 35rpx;
	background: rgb(57, 166, 255);
	color: #ffffff;
	font-size: 34rpx;
	text-align: center;
}
.summoney-add::after {
	border: 0;
}
/* 公账、私账详情 */
.account-sort {
	margin: 0 auto;
	padding: 0;
}
.sort-block {
	height: 108rpx;
	margin: 0 auto;
	display: flex;
	justify-content: space-between;
	border-bottom: 1rpx solid rgba(95, 95, 95, .1);
}
.sort-public-block, .sort-private-block {
	width: 50%;
	height: 108rpx;
	line-height: 108rpx;
	font-size: 32rpx;
	color: rgb(95, 95, 95);
}
.sort-public, .sort-private {
	display: block;
	width: 100rpx;
	height: 108rpx;
	margin: 0 auto;
	text-align: center;
}
.selected1, .selected2 {
	border-bottom: 4rpx solid rgb(57, 166, 255);
	box-sizing: border-box;
}
/* 渲染账单数据 */
.bill-detail {
	width: 670rpx;
	margin: 0 auto;
	padding: 0;
	height: 130rpx;
	line-height: 130rpx;
	box-sizing: border-box;
	display: flex;
	justify-content: space-between;
	border-bottom: 1rpx solid rgba(95, 95, 95, .2);
}
.billHave {
	display: none;
}
.detail-image {
	width: 80rpx;
	height: 80rpx;
	margin-top: 25rpx;
	margin-right: 30rpx;
}
.detail-info-container {
	display: flex;
	justify-content: space-between;
	margin-left: -90rpx;
}
.detail-info {
	line-height: 0;
	padding: 25rpx 0;
	width: 180rpx;
	margin-right: 14rpx;
	display: inline-flex;
	flex-direction: column;
	justify-content: space-around;
	box-sizing: border-box;
	color: rgb(95, 95, 95);
	font-size: 30rpx;
}
.info-time, .info-sort {
	height: 34rpx;
	line-height: 34rpx;
	text-align: center;
}
.info-time {
	color: rgb(160, 160, 160);
}
.detail-price {
	font-size: 24rpx;
	color: rgb(95, 95, 95);
}
.price-money {
	font-size: 32rpx;
}
.detail-button {
	width: 130rpx;
	height: 60rpx;
	margin: 35rpx 0;
	padding: 0;
	line-height: 60rpx;
	border-radius: 8rpx;
	background: #ffffff;
	font-size: 28rpx;
}
.detail-button::after {
	border: 0;
}
.done {
	border: 3rpx solid rgb(160, 160, 160);
	color: rgb(160, 160, 160);
}
.undone {
	border: 3rpx solid rgb(57, 166, 255);
	color: rgb(57, 166, 255);
}
.visible {
	visibility: hidden;
}
/* 账单无数据 */
.bill-none {
	margin: 0 auto;
	padding: 72rpx 0 0;
}
.none-content {
	font-size: 32rpx;
	color: rgb(160, 160, 160);
	text-align: center;
}
.billNone {
	display: none;
}
/* info弹窗 */
.show0, .show1 {
  display: none;
}
.alert-background, .menu-background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  background: rgba(0, 0, 0, .5);
}
.alert-container {
  position: relative;
  top: 370rpx;
  margin: 0 auto;
  width: 500rpx;
  height: 280rpx;
  background: rgb(247, 247, 247);
  border-radius: 14rpx;
  overflow: hidden;
}
.alert-container::after {
  border: 0;
}
.alert-content {
  position: absolute;
  left: 50rpx;
  display: block;
  width: 388rpx;
	margin-top: 57rpx;
	font-size: 32rpx;
  color: rgb(95, 95, 95);
}
.alert-confirm {
  position: absolute;
  bottom: 0;
  width: 520rpx;
  height: 96rpx;
  line-height: 96rpx;
  margin-left: -15rpx;
  border-top: 1rpx solid rgb(247, 247, 247);
  font-size: 32rpx;
  color: rgb(57, 166, 255);
}
/* 菜单详细分类 */
.menu-container {
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 600rpx;
	background: #ffffff;
}
.menu-switch, .menu-new, .menu-show, .menu-history, .menu-upload {
	height: 120rpx;
	margin: 0 auto;
	padding: 0;
	padding-left: 40rpx;
	border-bottom: 1rpx solid rgba(95, 95, 95, .2);
	box-sizing: border-box;
}
.menu-image {
	display: inline-block;
	width: 70rpx;
	height: 70rpx;
	margin-top: 25rpx;
	margin-right: 30rpx;
}
.menu-text {
	display: inline-block;
	width: 500rpx;
	font-size: 34rpx;
	color: rgb(95, 95, 95);
	vertical-align: 35%; 
}